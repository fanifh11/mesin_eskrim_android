<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff2cc"
    tools:context=".MainActivity"

    >

    <LinearLayout
        android:id="@+id/linWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linVM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#fff9c4"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/vending" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:text="Mesin Es Krim Berbasis Android"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        app:cardBackgroundColor="#fff9c4"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:id="@+id/linKonten"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtHarga"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:text="Harga Es Krim "
                                    android:textAlignment="center"
                                    android:textSize="30dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtOriginal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Original saja --> Rp. 5000"
                                    android:textAlignment="center"
                                    android:textSize="20dp"

                                    />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Original dengan topping --> Rp. 10000"
                                    android:textAlignment="center"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/txtPilihRasa"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="20dp"
                                    android:elegantTextHeight="true"
                                    android:padding="20dp"
                                    android:text="Pilih Rasa"
                                    android:textAlignment="center"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/linRasa"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/linCoklat"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical"

                                        >

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/imgCoklat"
                                                android:layout_width="wrap_content"
                                                android:layout_height="100dp"
                                                android:layout_weight="1"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintHorizontal_bias="0.0"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintVertical_bias="0.0"
                                                app:srcCompat="@drawable/coklat" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/linVanilla"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/imgVanilla"
                                                android:layout_width="wrap_content"
                                                android:layout_height="100dp"
                                                android:layout_weight="1"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/vanilla" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/linStroberi"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">

                                            <ImageView
                                                android:id="@+id/imgStroberi"
                                                android:layout_width="wrap_content"
                                                android:layout_height="100dp"
                                                android:layout_weight="1"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/stroberi" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <RadioGroup
                                    android:id="@+id/radGrup_rasa"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/radCoklat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:onClick="coklatOnClick"
                                        android:text="Cokelat" />

                                    <RadioButton
                                        android:id="@+id/radVanilla"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:onClick="vanOnClick"
                                        android:text="Vanilla" />

                                    <RadioButton
                                        android:id="@+id/radStroberi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:layout_weight="1"
                                        android:onClick="stroOnClick"
                                        android:text="Stroberi"
                                        tools:ignore="OnClick" />
                                </RadioGroup>

                                <TextView
                                    android:id="@+id/txtPilihTopping"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:layout_marginBottom="20dp"
                                    android:padding="20dp"
                                    android:text="Pilih Topping"
                                    android:textAlignment="center"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/linTopping1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"

                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:id="@+id/linMilo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"

                                        android:orientation="vertical">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <RadioButton
                                                android:id="@+id/radMilo"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:onClick="miloOnClick"
                                                android:text="Milo"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/imgMilo" />

                                            <ImageView
                                                android:id="@+id/imgMilo"
                                                android:layout_width="match_parent"
                                                android:layout_height="100dp"
                                                app:layout_constraintBottom_toTopOf="@+id/radMilo"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/milo" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/linMatcha"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <RadioButton
                                                android:id="@+id/radMatcha"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:onClick="matOnClick"
                                                android:text="Matcha"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/imgMatcha" />

                                            <ImageView
                                                android:id="@+id/imgMatcha"
                                                android:layout_width="match_parent"
                                                android:layout_height="100dp"
                                                app:layout_constraintBottom_toTopOf="@+id/radMatcha"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/matcha" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linTopping2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:id="@+id/linCoco"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"

                                        android:orientation="vertical">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:id="@+id/imgCoco"
                                                android:layout_width="match_parent"
                                                android:layout_height="100dp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/cococrunch" />

                                            <RadioButton
                                                android:id="@+id/radCoco"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:onClick="cocoOnClick"
                                                android:text="Coco crunch"

                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/imgCoco" />

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/linPeanut"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:id="@+id/imgPeanut"
                                                android:layout_width="match_parent"
                                                android:layout_height="100dp"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/peanut" />

                                            <RadioButton
                                                android:id="@+id/radKacang"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:onClick="kacangOnClick"
                                                android:text="Kacang"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/imgPeanut" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linTopping3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/linOreo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:id="@+id/imgOreo"
                                                android:layout_width="match_parent"
                                                android:layout_height="100dp"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:srcCompat="@drawable/oreo" />

                                            <RadioButton
                                                android:id="@+id/radOreo"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center"
                                                android:onClick="oreoOnClick"
                                                android:text="Oreo"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintEnd_toEndOf="parent"
                                                app:layout_constraintStart_toStartOf="parent"
                                                app:layout_constraintTop_toBottomOf="@+id/imgOreo" />
                                        </androidx.constraintlayout.widget.ConstraintLayout>


                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/txtTotal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:background="@drawable/total_background"
                                    android:hint="Total Harga"
                                    android:padding="20dp"
                                    android:textAlignment="center"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:id="@+id/linConfirm"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <Button
                                            android:id="@+id/button"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:onClick="konfirmasi"
                                            android:text="Konfirmasi" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:id="@+id/linReset"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <Button
                                            android:id="@+id/btnCancel"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:onClick="batal"
                                            android:text="Batal" />
                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:text="Masukkan Uang Anda"
                                    android:textAlignment="center"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txtTampilkanUang"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/total_background"
                                    android:hint="Rp. 0"
                                    android:padding="10dp"
                                    android:text=""
                                    android:textAlignment="center"
                                    android:textSize="20dp"
                                    android:textStyle="bold" />


                                <Button
                                    android:id="@+id/btnSepuluhribu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="140dp"
                                    android:layout_margin="20dp"
                                    android:background="@drawable/sepuluhribu"
                                    android:onClick="btnSepuluhribuOnClick" />

                                <Button
                                    android:id="@+id/btnLimaribu"
                                    android:layout_width="match_parent"
                                    android:layout_height="140dp"
                                    android:layout_margin="20dp"
                                    android:background="@drawable/limaribu"
                                    android:onClick="btnLimaribuOnClick" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#dadada"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/btnProses"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:onClick="buat"
                                    android:text="Buat es krim" />

                                <TextView
                                    android:id="@+id/txtHasil"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/pickup"
                                    android:gravity="center"
                                    android:onClick="ambilEskrim"
                                    android:padding="20dp"
                                    android:textAlignment="center"
                                    android:textSize="30dp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtKembalian"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/border"
                                android:onClick="ambilUang"
                                android:text="Uang Kembalian"
                                android:textAlignment="center"
                                android:textSize="20dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>